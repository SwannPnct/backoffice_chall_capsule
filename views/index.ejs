<!DOCTYPE html>
<html>
  <head>
    <title>Back Office</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Back Office</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/">Contacts</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/new">New</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container list_custom">
      <div class="filter_input">
        <select id="filter_type">
          <option value="" selected>-- Choose a type --</option>
          <option value="Family" >Family</option>
          <option value="Friend" >Friend</option>
          <option value="Work" >Work</option>
        </select>
        <label>Age min/max : </label>
          <input type="number" value="" placeholder="min" id="filter_min">
          <input type="number" value="" placeholder="max" id="filter_max">
          <button type="button" class="btn btn-dark" id="filter_button">Filter</button>
          <button type="button" class="btn btn-light" id="filter_cancel">Cancel</button>
      </div>
      
      <div class="row">

        <% for (let i = 0; i < contactList.length; i++) { %>

          <div class="card col-10 col-md-6 col-lg-4 me-3" style="width: 18rem;">
            <div class="card-body">
              <h5 class="card-title"><%= contactList[i].firstname + " " + contactList[i].lastname %> </h5>
              <h6 class="card-subtitle mb-2 text-muted"><%= contactList[i].type  %></h6>
              <table class="table table-borderless">
                <tbody>
                  <tr>
                    <td>Email</td>
                    <td><%= contactList[i].email  %></td>
                  </tr>
                  <tr>
                    <td>Age</td>
                    <td class="contact_age"><%= contactList[i].age  %></td>
                  </tr>
                </tbody>
              </table>
              <a href="/edit?id=<%= contactList[i]._id %>" class="card-link">Edit</a>
              <a href="/delete?id=<%= contactList[i]._id %>" class="card-link">Delete</a>
            </div>
          </div>

          <%
        } %> 

        
      </div>
    </div>
    <script src="/javascripts/contact_filter.js"></script>
  </body>
</html>
